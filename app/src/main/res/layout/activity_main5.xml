<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="64dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:translationX="-17dp"
                    android:translationY="70dp"
                    app:srcCompat="@drawable/hello" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Добро пожаловать!"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:translationX="-57dp"
                    android:translationY="74dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:text="Войдите, чтобы пользоваться функциями\nприложения"
                    android:textColor="#000000"
                    android:translationX="33dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="669dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Вход по E-mail"
                    android:translationX="34dp"
                    android:translationY="127dp" />

                <EditText
                    android:id="@+id/editTextTextEmailAddress"
                    style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg"
                    android:ems="10"
                    android:hint="example@mail.ru"
                    android:inputType="textEmailAddress"
                    android:selectAllOnFocus="false"
                    android:singleLine="false"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:translationY="130dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="345dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#1A6FEE"
                    android:fontFamily="@font/roboto"
                    android:text="Далее"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:translationY="150dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:text="Или войдите с помощью"
                    android:textAlignment="center"
                    android:translationY="368dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="345dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Войти с Яндекс"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:translationY="370dp"
                    app:iconTint="#000000"
                    app:rippleColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>